<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:elevation="8dp"
        android:background="#ffffff"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:scaleType="centerInside"
            android:layout_marginRight="16dp"
            android:id="@+id/car_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/jaguar"
            android:layout_centerVertical="true"
            android:backgroundTint="#ffffff"
            android:background="@drawable/cardview_border"/>
        <!-- android:background="@drawable/textview_border"-->


        <TextView
            android:id="@+id/update_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toStartOf="@+id/type"
            android:layout_toEndOf="@id/car_image"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="Name"
            android:textColor="@color/text_color_selector"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/update_name"
            android:layout_alignStart="@+id/update_name"
            android:layout_alignEnd="@id/update_name"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:text="company"
            android:textColor="#A9A9A9" />

        <LinearLayout
            android:id="@+id/ratingsLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/company"
            android:layout_alignStart="@+id/company"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-1dp"
                android:layout_marginBottom="1dp"
                android:text="Ratings:4"
                android:textColor="@color/text_color_selector"
                android:textSize="17dp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/regNo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/company"
            android:layout_alignStart="@+id/company"
            android:text="MH153346"
            android:textColor="@color/text_color_selector"
            android:textSize="17dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ratingsLL"
            android:layout_alignParentEnd="true"
            android:text="200SR"
            android:textColor="@color/text_color_selector"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/cardview_border"
            android:backgroundTint="#43a047"
            android:padding="4dp"
            android:text="91"
            android:textColor="#ffffff" />

    </RelativeLayout>


